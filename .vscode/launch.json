{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Run server + client (dev)",
            "configurations": ["Run client (dev)", "run server (python)", "Chrome (dev client)"],
            "stopAll": true
        }
    ],
    "configurations": [

        {
            "name": "Run client (dev)",
            "console": "integratedTerminal",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "runtimeExecutable": "npm",
            "runtimeVersion": "22.14.0",
            "cwd": "${workspaceFolder}/packages/client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "run server (python)",
            "type": "debugpy",
            "request": "launch",
            "module": "halmp-server",
            "env": {
            },
            "args": [
            ],
            "justMyCode": true,
            "cwd": "${workspaceFolder}/packages/server"
        },
        {
            "name": "run OSC server (python)",
            "type": "debugpy",
            "request": "launch",
            "module": "halmp-OSCserver",
            "env": {
            },
            "args": [
            ],
            "justMyCode": true,
            "cwd": "${workspaceFolder}/packages/OSCserver"
        },
        {
            "name": "Chrome (dev client)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Build client (prod)",
            "console": "integratedTerminal",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "build"
            ],
            "runtimeExecutable": "npm",
            "runtimeVersion": "22.14.0",
            "cwd": "${workspaceFolder}/packages/client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Chrome (prod)",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:5000",
            "webRoot": "${workspaceFolder}"
        },
    ]
}